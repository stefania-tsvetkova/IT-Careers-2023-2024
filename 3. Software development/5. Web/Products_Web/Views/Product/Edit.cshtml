@using Products_Web.Models.Product
@*
*@
@{
    ViewData["Title"] = "Edit Product";
}

@model ProductViewModel

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h2>Edit Product</h2>

    <form method="post" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">
        <p>
            <label>Name</label>
            <input type="text" name="Name" value="@Model.Name" />
        </p>

        <p>
            <label>Price</label>
            <input type="number" step="any" name="Price" value="@Model.Price" />
        </p>

        <p>
            <label>Stock</label>
            <input type="number" name="Stock" value="@Model.Stock" />
        </p>

        <p>
            <label>Nutrition Information</label>
            <input type="text" name="NutritionInformation" value="@Model.NutritionInformation" />
        </p>

        <p>
            <label>Expiration Date</label>
            <input type="date" name="ExpirationDate" value="@Model.ExpirationDate.ToString("yyyy-MM-dd")" />
        </p>


        <button type="submit">Edit</button>

        <button asp-controller="Product" asp-action="Index">Cancel</button>
    </form>
}
else
{
    <h2 class="text-danger">You can't accesss this page if you aren't logged in.</h2>
}