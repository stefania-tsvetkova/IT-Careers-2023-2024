@{
}

@model IEnumerable<ProductViewModel>

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th>@product.Name</th>
                <th>@product.Price</th>
                <th>@product.Stock</th>
                <th>
                    <button>
                        <a 
                            asp-controller="Product" 
                            asp-action="Delete" 
                            asp-route-id="@product.Id">
                            Delete
                        </a>
                    </button>
                </th>
            </tr>
        }
    </tbody>
</table>